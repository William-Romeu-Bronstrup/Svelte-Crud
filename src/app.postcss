@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --bg: #141922;
  --title-white: #fff;
  --title-blue: rgb(96 165 250);
  --subtitle: #666f79;
  --border-normal: rgb(156 163 175);
  --border-focus: rgb(147 197 253);
  --button-normal: rgb(96 165 250);
  --button-hover: rgb(59 130 246);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background-color: var(--bg);
}
